<section class="container-fluid">
    <h1>{{{title}}}</h1>

    <form id="frmAddCandidate" action="/v1/EnterCandidate/" method="POST">
        <div class="table-responsive col-9">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="text" id="txtFName" placeholder="First" </td>
                            <td>
                                <input type="text" id="txtLName" placeholder="Last" </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <input type="submit" class="btn btn-info" value="Add Candidate" />
    </form>
    <p id="subResult"></p>
    <hr>    
    <div class="row">
        <div class="col-lg-6 col-sm-6 ">
            <h2>Candidates</h2>
            {{#candidateList}}
            <div class="row col-md-12">
                <div class="card">
                    <h4>{{name}}</h4>
                    <p>Party: {{party}}</p>
                </div>
            </div>
            <hr style="visibility: hidden" /> {{/candidateList}}
        </div>
    </div>

</section>
<script>
    $("#frmAddCandidate").submit(function (e) {
        e.preventDefault();
        var $form = $(this);
        var URL = $form.attr('action');

        var _firstName = $("#txtFName").val();
        var _lastName = $("#txtLName").val();
        var posting = $.post(URL, {
            firstName: _firstName,
            lastName: _lastName
        });
        posting.done(function (data) {
            console.log(data);
            let output = JSON.stringify(data);
            $("#subResult").append(output);
        });
    });

</script>